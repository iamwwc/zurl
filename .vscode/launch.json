    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'zurl'",
            "program": "${workspaceFolder}/target/debug/zurl",
            "args": [
                "https://www.baidu.com"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Sign sm2",
            "program": "${workspaceFolder}/target/debug/zurl",
            "args": [
                "gen",
                "--ca",
                "--ty",
                "sm2",
                "www.example.com",
                "."
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        }
    ]
}